<% @addresses = spree_current_user ? spree_current_user.addresses : [] %>

<div class="row">
  <div class="col-sm-6" data-hook="billing_fieldset_wrapper">
    <div class="panel panel-default" id="billing" data-hook>
      <%= form.fields_for :bill_address do |bill_form| %>
        <div class="panel-heading">
          <h3 class="panel-title"><%= Spree.t(:billing_address) %></h3>
        </div>
        <% if @addresses.present? %>
          <p class="field select_address">
            <%= form.label "ship_address_id", 'Quiero utilizar una dirección de despacho ya existente.'%>
            <%= form.select "ship_address_id",  @addresses.map{ |a| [a, a.id] }.unshift(["-- Seleccione una dirección existente --", nil]), {}, {:class => 'form-control'} %>
          </p>
          <%= t('address_book.or_enter_new_address') %>
        <% end %>
        <div class="panel-body">          
          <%= render :partial => 'spree/addresses/form', :locals => {
            :address_name => 'bill_address',
            :form => bill_form,
            :address_type => 'billing',
            :address => @order.bill_address
          } %>
        </div>
        
      <% end %>
    </div>
  </div>

  <div class="col-sm-6" data-hook="shipping_fieldset_wrapper" style="display:none">
    <div class="panel panel-default" id="shipping" data-hook>
      <%= form.fields_for :ship_address do |ship_form| %>
        <div class="panel-heading">
          <h3 class="panel-title"><%= Spree.t(:shipping_address) %></h3>
        </div>
        <div class="panel-body">
          <p class="field checkbox" data-hook="use_billing">
            <%= check_box_tag 'order[use_billing]', '1', @order.shipping_eq_billing_address? %>
            <%= label_tag :order_use_billing, Spree.t(:use_billing_address), :id => 'use_billing' %>
          </p>
          <%= render :partial => 'spree/addresses/form', :locals => {
            :address_name => 'ship_address',
            :form => ship_form,
            :address_type => 'shipping',
            :address => @order.ship_address
          } %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="well text-right form-buttons" data-hook="buttons">
  <%= submit_tag Spree.t(:save_and_continue), :class => 'btn btn-lg btn-success' %>

  <span data-hook="save_user_address">
    &nbsp; &nbsp;
    <%= check_box_tag 'save_user_address', '1', try_spree_current_user.respond_to?(:persist_order_address) %>
    <%= label_tag :save_user_address, Spree.t(:save_my_address) %>
  </span>
</div>