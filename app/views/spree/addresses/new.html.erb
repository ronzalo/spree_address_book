<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @address } %>
<%= form_for @address, :html => {:id => "checkout_form_address"} do |f| %>
<fieldset>
  <%= content_tag(:legend, Spree.t(:new_shipping_address)) %>
  <div class="inner">
    <%= render :partial => 'spree/addresses/form', :locals => {
      :address_name => 'address',
      :form => f,
      :address_type => 'billing',
      :address => @address
    } %>
  </div>
  <%= f.submit Spree.t(:save, :scope => :address_book) %>
</fieldset>
<% end %>
